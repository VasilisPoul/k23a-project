    "version": "0.2.0",
    "configurations": [

        {
            "name": "project",  
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build Make",
            "program": "${workspaceFolder}/project",
            "args": [
                "-dir",
                "Datasets/camera_specs/2013_camera_specs",
                "-csv",
                "Datasets/sigmod_large_labelled_dataset.csv",
                "-sw",
                "resources/unwanted-words.txt",
                "-m",
                "bow"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name": "Test",  
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build Make",
            "program": "${workspaceFolder}/tests-bin/logreg_tests",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }





    ]
}
